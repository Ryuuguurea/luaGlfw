.PHONY : njoy platform
CFLAGS=-g -Wall --target=x86_64-w64-mingw -Isource/include
GLFWSRC := \
source/include/glad/glad.c \
build/win32/glfw3.dll

LUASRC:= \
build/win32/lua53.dll

ENGINESRC:= \
source/engine/luabinding/*.cpp
INCLUDESRC=$(GLFWSRC) $(LUASRC) $(ENGINESRC)

CC=clang++

platform:TARGET:=build/win32/njoy.exe
platform:SRC += source/engine/main.cpp
platform:LDFLAGS+= -lgdi32 -lopengl32
platform:$(SRC) njoy
njoy:
	$(CC) $(CFLAGS) -o $(TARGET) $(SRC) $(INCLUDESRC) $(LDFLAGS)
.PHONY: clean
clean:
	rm *.o
	rm njoy.exe